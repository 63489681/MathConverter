<Window x:Class="MathConverterDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:math="http://hexinnovation.com/math"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MathConverter Demo" SizeToContent="Height" Width="324">
    <Window.Resources>
        <math:MathConverter x:Key="math" UseCache="False"/>
    </Window.Resources>
    <StackPanel Margin="20">
        <TextBlock Text="How many apples do you want?"/>
        <ComboBox x:Name="cb">
            <ComboBox.Items>
                <sys:Int32>0</sys:Int32>
                <sys:Int32>1</sys:Int32>
                <sys:Int32>2</sys:Int32>
                <sys:Int32>3</sys:Int32>
                <sys:Int32>4</sys:Int32>
                <sys:Int32>5</sys:Int32>
            </ComboBox.Items>
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock x:Name="tb" Tag="format(&quot;{0} apples&quot;;x)">
                        <TextBlock.Text>
                            <MultiBinding Converter="{StaticResource math}">
                                <Binding Path="Tag" RelativeSource="{RelativeSource Self}" Mode="OneWay"/>
                                <Binding Mode="OneWay"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Mode=OneWay}" Value="1">
                            <Setter TargetName="tb" Property="Tag" Value="format(&quot;{0} apple&quot;;x)"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </StackPanel>
</Window>
